{
	"name": "WeRate",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest",
		"flow": "flow",
		"fun": "yarn run package:functions && firebase deploy",
		"package:functions": "babel firebase-functions --out-dir functions --copy-files --ignore firebase-functions/node_modules",
		"prepackage:functions": "rimraf functions",
		"postpackage:functions": "cd functions && yarn",
		"postinstall": "remotedev-debugger --hostname localhost --port 5678 --injectserver"
	},
	"remotedev": {
		"hostname": "localhost",
		"port": 5678
	},
	"dependencies": {
		"react": "16.0.0",
		"react-native": "0.50.3",
		"react-native-firebase": "^3.1.0",
		"react-native-navigation": "^1.1.281",
		"react-native-vector-icons": "^4.4.2",
		"react-redux": "^5.0.6",
		"redux": "^3.7.2",
		"redux-form": "^7.2.0",
		"redux-thunk": "^2.2.0",
		"reselect": "^3.0.1"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-jest": "21.2.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-react-native": "4.0.0",
		"flow-bin": "0.56.0",
		"jest": "21.2.1",
		"react-test-renderer": "16.0.0",
		"redux-logger": "^3.0.6",
		"remote-redux-devtools": "^0.5.12",
		"remotedev-rn-debugger": "^0.8.3",
		"rimraf": "^2.6.2"
	},
	"jest": {
		"preset": "react-native"
	}
}
